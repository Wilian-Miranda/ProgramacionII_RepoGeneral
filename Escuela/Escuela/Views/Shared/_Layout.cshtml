<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Escuela</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/bootstrap/dist/css/menu.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <figure class="menu-logo">
                    <a href="#" class="menu-link-logo"><img class="menu-img-logo" src="~/img/MirandasCinema.gif" style="width:125px; height: 90px;" alt="logo"/></a>
                </figure>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MIRANDA'S CINEMA</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-xl-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <!--<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>-->
                            <button class="dropdown-toggle menu-botones" id="dropdownMenuButton" data-toggle="dropdown">
                                Categorías
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Acción</a>
                                <a class="dropdown-item" href="#">Suspenso</a>
                                <a class="dropdown-item" href="#">Comedia</a>
                            </div>
                        </li>
                        <!--=====================================================================================================-->
                        <li class="nav-item">
                            <button class="nav-link text-dark menu-botones" asp-area="" asp-controller="Home" asp-action="Curso">Películas</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link text-dark menu-botones" asp-area="" asp-controller="Home" asp-action="Privacy">Perfil</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link text-dark menu-botones" asp-area="" asp-controller="Home" asp-action="Privacy">Cuenta</button>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn my-2 my-sm-0 btn-buscar" type="submit">Buscar</button>
                    </form>
                    <button type="button" class="btn-login btn">Iniciar Sesión</button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Escuela - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
