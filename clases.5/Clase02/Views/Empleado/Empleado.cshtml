
@{
    ViewBag.Title = "Empleado";
}
@model List<Clase02.Models.Tbl_empleado>
<h2>Tabla de empleados activos</h2>

<!--Uso de razor para iterar los datos con un foreach-->
<table class="table table-dark table-striped">
    <thead>
    <th>CÓDIGO</th>
    <th>NOMBRE</th>
    <th>APELLIDO</th>
    <th>EMAIL</th>
    <th>TELÉFONO</th>
    <th>DUI</th>
    <th>DIRECCION</th>
    <th>ACCIONES</th>
    <thead />
    <tbody>
        @foreach (var i in Model)
        {
            <!-- El controlador manda al model una inyeccion con un objeto
             de la lista de personas en repository-->
            <tr>
                <td>@i.Id_empleado</td>
                <td>@i.Empl_nombre</td>
                <td>@i.Empl_apellido</td>
                <td>@i.Empl_email</td>
                <td>@i.Empl_tel</td>
                <td>@i.Empl_DUI</td>
                <td>@i.Empl_direccion</td>
                <td><button class="btn-danger">@Html.ActionLink("Eliminar", "EliminarEmpleado", new { id = i.Id_empleado })</button></td>
                <!--Se activara el metodo de gestion de empleado en EmpleadoCon. se manda el ID de la fila actual y una variable de valor true
                    para especificar que se actualizará una fila-->
                <td> <button class="btn-warning">@Html.ActionLink("Actualizar", "GestionEmpleado",new { id = i.Id_empleado, interruptor = true })</button></td>
        </tr>
    }

    </tbody>
</table>
<br />
<!--Se activara el metodo de gestion de empleado en EmpleadoCon. se manda el ID con valor 0 y una variable de valor false
    para especificar que se guardara un nuevo emplado-->
<button class="btn-success">@Html.ActionLink("Nuevo empleado", "GestionEmpleado", new { id = 0, interruptor = false })</button>

